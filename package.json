{
  "name": "warboard",
  "version": "1.0.0",
  "description": "Boardgame 2017",
  "proxy": "http://localhost:4000",
  "scripts": {
    "start": "react-scripts start",
    "start:server": "NODE_ENV=development node_modules/.bin/nodemon --config nodemon.json server",
    "test": "make tests",
    "test:standard": "node_modules/.bin/standard --verbose | snazzy",
    "test:unit": "NODE_ENV=test node_modules/.bin/_mocha --recursive test/unit",
    "test:coverage": "NODE_ENV=test node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --opts .mocharc",
    "coverage:publish": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "react-scripts build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gperreymond/warboard.git"
  },
  "author": "Gilles Perreymond",
  "bugs": {
    "url": "https://github.com/gperreymond/warboard/issues"
  },
  "homepage": "https://github.com/gperreymond/warboard#readme",
  "dependencies": {
    "bluebird": "3.5.0",
    "boom": "5.2.0",
    "debug": "2.6.8",
    "eraro": "0.4.1",
    "glob": "7.1.2",
    "hapi": "16.5.0",
    "inert": "4.2.1",
    "lodash.camelcase": "4.3.0"
  },
  "devDependencies": {
    "chai": "4.1.0",
    "coveralls": "2.13.1",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-node": "5.1.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "istanbul": "0.4.5",
    "lodash.shuffle": "4.2.0",
    "mocha": "3.5.0",
    "mocha-standard": "1.0.0",
    "nconf": "0.8.4",
    "nodemon": "1.11.0",
    "normalize.css": "7.0.0",
    "pixi.js": "4.5.4",
    "prop-types": "15.5.10",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.1.4",
    "reflux": "6.4.1",
    "request": "2.81.0",
    "request-promise": "4.2.1",
    "snazzy": "7.0.0",
    "standard": "10.0.2"
  },
  "standard": {
    "globals": [
      "requestAnimationFrame",
      "before",
      "after",
      "describe",
      "it",
      "expect"
    ],
    "ignore": [
      "build/**",
      "coverage/**",
      "data/**",
      "public/**"
    ]
  }
}
