{
  "name": "warboard",
  "version": "1.0.0",
  "description": "dungeon twister like (automation pixi with react)",
  "proxy": "http://localhost:4000",
  "scripts": {
    "start:client": "react-scripts start",
    "start:server": "DEBUG=warboard:* ./node_modules/.bin/nodemon --config nodemon.json server",
    "test:standard": "node_modules/.bin/standard --verbose | snazzy",
    "test:coverage": "NODE_ENV=test node_modules/.bin/nyc cover node_modules/.bin/mocha -- --opts .mocharc",
    "build": "react-scripts build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gperreymond/warboard.git"
  },
  "author": "Gilles Perreymond",
  "bugs": {
    "url": "https://github.com/gperreymond/warboard/issues"
  },
  "homepage": "https://github.com/gperreymond/warboard#readme",
  "dependencies": {
    "boom": "7.2.0",
    "debug": "3.1.0",
    "eraro": "0.4.1",
    "glob": "7.1.2",
    "glob-promise": "3.4.0",
    "hapi": "17.3.1",
    "inert": "5.1.0",
    "lodash": "4.17.10"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.1.0",
    "mocha": "5.1.1",
    "mocha-standard": "1.0.0",
    "nconf": "0.10.0",
    "nodemon": "1.17.3",
    "normalize.css": "8.0.0",
    "nyc": "11.7.1",
    "pixi.js": "4.7.3",
    "prop-types": "15.6.1",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.1.4",
    "reflux": "6.4.1",
    "request": "2.85.0",
    "request-promise": "4.2.2",
    "snazzy": "7.1.1",
    "standard": "11.0.1"
  },
  "standard": {
    "globals": [
      "requestAnimationFrame",
      "before",
      "after",
      "describe",
      "it",
      "expect"
    ],
    "ignore": [
      "build/**",
      "coverage/**",
      "data/**",
      "public/**"
    ]
  }
}
